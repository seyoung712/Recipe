<!--방금 작성한 게시글을 보여줌-->
{{>layouts/header}}

<h2 id="new">게시글 확인</h2>
<hr>
<br><br><br>

<table class="table" style="width: 95%;"  align="center" >
    {{#article}}
        <tr>
            <td style="font-size:10px; padding:15px;">{{division}}</td> <!--구분-->
        </tr>
        <tr>
            <td style="font-size:20px; padding:15px;"> <b>{{title}}</b> </td> <!--제목-->
        </tr>
        <tr>
            <td style="font-size:10px; padding:10px; color:gray"> &nbsp; {{rgiDate}}</td> <!--등록일-->
        </tr>
        <tr>
            <td style="font-size:15px; padding:20px; height:300px">{{content}}</td> <!--내용-->
        </tr>
    {{/article}}

</table>

{{>comments/_comments}}
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<div align="right" style="width: 98%;">
    <a href="/articles/{{article.id}}/articleEdit" class="btn btn-outline-success">수정</a>
    <a href="/articles/{{article.id}}/delete" class="btn btn-outline-danger">삭제</a>
    <a href="/articles" class="btn btn-outline-success" align="right">목록</a>
</div>



{{>layouts/footer}}