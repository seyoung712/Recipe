<!--등록된 식자재-->
<form action="/Recipe" method="get">
    <div class="container text-center">
        <div class="row center-table">

            {{#datalist}}
<!--                모델로 지정한 datalist를 불러온다.-->

                <div class="card" style="width: 15rem;">
                    <img src="/images/{{image}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{name}}</h5>
                        <p class="menuinfo">{{nameinfo}}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">부류 : {{kind}}</li>
                        <li class="list-group-item">구매일자 {{start}}</li>
                        <li class="list-group-item">종료날짜 {{enddate}}</li>
                        <li class="list-group-item" style="color:blue;">{{diffdays}}</li>


                    </ul>
<!--                    이미지 클릭시 식자재 상세보기로 이동한다.-->
                    <div class="card-body">
                        <a href="/imageshow/{{id}}" class="card-link" style="text-decoration:none; color: inherit;"><b>식자재 상세보기</b></a>
                    </div>
<!--                    삭제 버튼-->
                    <div class="card-body">
                        <a href="/listDelete/{{id}}"><li class="btn btn-outline-danger">삭제</li></a>
                    </div>
                </div>

            {{/datalist}}



        </div>
    </div>
</form>

